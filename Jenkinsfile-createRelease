#!/usr/bin/env groovy

pipeline {

    agent any
    
    tools {
        jdk 'jdk11'
        maven 'M3'
    }

    options {
        buildDiscarder(logRotator(numToKeepStr: '10'))
    }

    stages {
    
    	stage('Create Release') { 
    		steps {
    			withCredentials([usernamePassword(credentialsId: 'f2a37507-26ba-4be2-bbc9-bc878e6e67d7',usernameVariable: 'GIT_USERNAME', passwordVariable: 'GIT_PASSWORD')]) {
                    sh "git remote set-url origin https://${GIT_USERNAME}:${GIT_PASSWORD}@bitbucket.org/codeonceteam/grizzly-api-runtime-function.git"
	      			sh "mvn -B gitflow:release-start -DpushRemote=true -DallowSnapshots=true"
	      			sh "mvn -B gitflow:release-finish -DpushRemote=true"
	      			sh "git checkout develop"
	      			sh "mvn versions:use-latest-snapshots"
	      			sh "git commit -a -m 'use-latest-snapshots for dependencies' --allow-empty"
	      			sh "git push"
	      		}
	    	}
	 	}
    }
    
    post { 
        always { 
            cleanWs()
        }
    }
}